public class Solution {
    // 当然全部统计是最基本的方法
    // 对于方块形, 所有的边都有一条对边
    // 所以只需要统计一半的边就可以了.
    public int islandPerimeter(int[][] grid) {
        if(null == grid)
            return 0;
        int m = grid.length;
        if(0 == m)
            return 0;
        int n = grid[0].length;
        if(0 == n)
            return 0;
        int res = 0;
        
        for(int i = 0; i < m; ++i){
            for(int j = 0; j < n; ++j){
                
                if(1 == grid[i][j]){
                    if(i == 0 || 0 == grid[i-1][j] )
                        res++;
                    if(j == 0 || 0 == grid[i][j-1] )
                        res++;
                }
            }
        }
        
        return res<<1;
    }
}
